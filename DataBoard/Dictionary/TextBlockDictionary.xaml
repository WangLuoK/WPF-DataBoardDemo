<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="TextBlockForDataGridStyle" TargetType="{x:Type TextBlock}">
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="Red" />
                <Setter Property="Cursor" Value="Hand" />
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style
        x:Key="TextBlockExitStyle"
        BasedOn="{StaticResource TextBlockForDataGridStyle}"
        TargetType="{x:Type TextBlock}">
        <Setter Property="Text" Value="&#xf2d3;" />
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="FontFamily" Value="/Fonts/#FontAwesome" />
        <Setter Property="Margin" Value="0,5,5,0" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="Foreground" Value="White" />

    </Style>

</ResourceDictionary>